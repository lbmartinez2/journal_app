<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <% form.label :title, style: "display: block" %>
    <%= form.text_field :title, class:"form-control w-100", placeholder:"Title" %>
  </div>
<br>
  <div>
    <% form.label :content, style: "display: block" %>
    <%= form.text_area :content, class:"form-control w-100", placeholder:"Content" %>
  </div>
<br>
  <div>
    <% form.label :category, style: "display: block" %>
    <%= form.text_field :category, class:"form-control w-100", placeholder:"Category" %>
  </div>

<br>
  <div>
    <%= form.number_field :user_id, id: :entry_user_id, class:"form-control w-100", value:current_user.id, type: :hidden %>
  </div>
<br>

  <div>
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
